<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:soap="http://cxf.apache.org/bindings/soap"
	xmlns:beans="http://cxf.apache.org/configuration/beans"
	xsi:schemaLocation="http://cxf.apache.org/configuration/beans http://cxf.apache.org/schemas/configuration/cxf-beans.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
		http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd">

	<!-- JAX-RS -->
	<jaxrs:server id="helloService" address="/rest">
		<jaxrs:serviceBeans>
			<ref bean="helloBean" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

	<!-- JAX-WS -->
	<jaxws:endpoint implementor="#helloBean"
		address="/jaxws/hello" />

	<bean id="helloBean" class="ua.nure.itech.jaxws.service.HelloAnnotated" />

</beans>
